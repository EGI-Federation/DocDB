#! /usr/bin/env perl
#
# Author Eric Vaandering (ewv@fnal.gov)
#

use Benchmark;
use CGI;
use DBI;

$StartTime = new Benchmark;

require "DocDBGlobals.pm";
require "ResponseElements.pm";
require "MySQLAccess.pm";
require "FSUtilities.pm";
require "HTMLUtilities.pm";
require "Security.pm";


$query = new CGI;  # Global for subroutines

%params = $query -> Vars;

$DocumentID = $params{docid};
$DocumentID =~ s/^\s+//; # Remove leading and trailing spaces
$DocumentID =~ s/\s+$//;

unless ($DocumentID) {
  print $query->header;
  print "You are must supply a document number!<p>\n";
  print $query->end_html; 
  exit;
}  
  
$dbh   = DBI->connect('DBI:mysql:'.$db_name.':'.$db_host,$db_rouser,$db_ropass);
&GetSecurityGroups;
&FetchDocument($DocumentID);

if ($params{version} eq "0") { # Options are undefined, 0, and non-zero.
  $Version = 0;
} else {
  if ($params{version}) {
    $Version    = $params{version};
    $Version =~ s/^\s+//; # Remove leading and trailing spaces
    $Version =~ s/\s+$//;
  } else {   
    $Version = $Documents{$DocumentID}{NVER};
  }
}

print $query->header;
&BTeVHeader("BTeV Document $DocumentID-v$Version");

unless (&CanAccess($DocumentID,$Version)) {
  print "<b>Either you are not authorized to view this document (with the username and password you supplied), or the document does not exist.</b><p>\n";
  &BTeVFooter($DBWebMasterEmail,$DBWebMasterName);
  exit;
}  

my $DocRevID   = &FetchRevisionByDocumentAndVersion($DocumentID,$Version);

unless ($DocRevID) { # Probably never executed since CanAccess fails.
  print "This document does not exist.<p>\n";
  &BTeVFooter($DBWebMasterEmail,$DBWebMasterName);
  exit;
}
  

&PrintRevisionInfo($DocRevID);

&OtherVersionLinks($DocumentID,$Version);

$EndTime  = new Benchmark;
$TimeDiff = timediff($EndTime,$StartTime);
print "<p><b>Execution time: </b>",timestr($TimeDiff),"<p>\n";

&DocDBNavBar;
&BTeVFooter($DBWebMasterEmail,$DBWebMasterName);
